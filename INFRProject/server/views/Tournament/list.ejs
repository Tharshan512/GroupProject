<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Tournament Database-->
<main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-10">
            <h1><%= title %></h1>
            <br>
            <a href="/tournamentslist/add" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i> Add Tournament
            </a>
            <table class="table table-bordered table-striped table-hover">
                <tr class="d-flex">
                    <th class="text-center col-2">Name</th>
                    <th class="text-center col-2">Author</th>
                    <th class="text-center col-1">Published</th>
                    <th class="col-4">Description</th>
                    <th class="text-center col-1">Price</th>
                </tr>
                <% for(let count=0;count<TournamentList.length;count++) { %>
                <tr class="d-flex">
                    <td class="text-center col-2"><%= TournamentList[count].Name %></td>
                    <td class="text-center col-2"><%= TournamentList[count].Author %></td>
                    <td class="text-center col-1"><%=TournamentList[count].Published%></td>
                    <td class="col-4"><%= TournamentList[count].Description %> </td>
                    <td class="text-center col-1"><%= TournamentList[count].Price %></td>
                    <td class="text-center col-1">
                        <a href="/tournamentslist/edit/<%= TournamentList[count]._id%>"
                            class="btn btn-primary btn-sm">
                        <i class="fas fa-pencil-alt"></i>Edit
                    </a>
                    </td>
                    <td class="text-center col-1">
                        <a href="/tournamentslist/delete/<%= TournamentList[count]._id%>"
                            class="btn btn-danger btn-sm">
                        <i class="fas fa-trash-alt"></i>Delete
                    </a>
                    </td>
                </tr>    
                    <%} %>
            </table>
        </div>
    </div>
</main>
<%- include ../Partials/footer.ejs%>