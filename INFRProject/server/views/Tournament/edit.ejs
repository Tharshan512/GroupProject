<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for the edit Operation-->
<div class="container"></div>
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Tournament Title</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter the Tournament Title" name="Name" value="<%= Tournament.Name %>" required>
                </div>
                <div class="form-group">
                    <label for="authorTextField">Tournament Author</label>
                    <input type="text" class="form-control" id="authorTextField" placeholder="Enter the Tournament Author" name="Author" value="<%= Tournament.Author %>" required>
                </div>
                <div class="form-group">
                    <label for="publishedTextField">Published</label>
                    <input type="text" class="form-control" id="publishedTextField" placeholder="Enter the Published year" name="Published" value="<%= Tournament.Published %>" required>
                </div>
                <div class="form-group">
                    <label for="descriptionTextArea">Tournament Description</label>
                    <textarea type="text" class="form-control" id="descriptionTextArea"  placeholder="enter the Tournament Description" name="Description" required><%= Tournament.Description %></textarea>
                </div>
                <div class="form-group">
                    <label for="timetextfield">Price</label>
                    <input type="datetime-local" class="form-control" id="timetextfield" placeholder="Calender" name="Date" value="<%= Tournament.Date %>" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="submit">Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>