<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for Add Page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="TeamNames">TeamNames</label>
                    <input type="text" class="form-control" id="TeamNames" placeholder="Enter the Team Names" name="TeamNames" required>
                </div>
                <div class="form-group">
                    <label for="Date">Date</label>
                    <input type="text" class="form-control" id="Date" placeholder="Enter when the tournament starts" name="Date" required>
                </div>
                <div class="form-group">
                    <label for="Location">Location</label>
                    <input type="text" class="form-control" id="Location" placeholder="Enter the Location" name="Location" required>
                </div>
                <div class="form-group">
                    <label for="Description">Tournament Description</label>
                    <textarea type="text" class="form-control" id="Description"  placeholder="Enter the Tournament Description" name="Description" required></textarea>
                </div>
                <div class="form-group">
                    <label for="Winner">Winner of the Tournament</label>
                    <input type="text" class="form-control" id="Winner" placeholder="Winner" name="Winner" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
               <button class="btn btn-warning" type="button" 
                 onclick="window.history.back()">Cancel
                    <i class="fas fa-undo"></i></button>  
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>